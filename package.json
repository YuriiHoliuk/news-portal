{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "A basic template that consists of the essential elements that are required to start building a React application",
  "scripts": {
    "build": "webpack",
    "build:dev": "npm run build -- --env.env=dev",
    "build:dev:watch": "npm run build:dev -- --watch",
    "build:dev:bundleanalyze": "npm run build:dev -- --env.addons=bundleanalyze",
    "serve:dev": "webpack-dev-server --env.env=dev --hot",
    "serve:dev:express": "webpack-dev-server --env.environment=express --env.env=dev --hot",
    "serve:dev:local": "webpack-dev-server --env.environment=local --env.env=dev --hot",
    "serve:dev:dashboard": "webpack-dashboard -- webpack-dev-server --hot --env.env=dev --env.addons=dashboard",
    "build:prod": "npm run build -- -p --env.env=prod",
    "build:prod:express": "npm run build -- -p --env.env=prod --env.environment=express",
    "build:prod:local": "npm run build -- -p --env.env=prod --env.environment=local",
    "build:prod:watch": "npm run build:prod -- --watch",
    "build:prod:bundleanalyze": "npm run build:prod -- --env.addons=bundleanalyze",
    "serve:prod": "npm run build:prod && live-server ./dist",
    "lint": "tslint 'src/**/*.ts*'; exit 0",
    "lint:fix": "tslint 'src/**/*.ts*' --fix; exit 0",
    "start": "npm run serve:dev",
    "test": "echo \"No tests available\"; exit 0",
    "deploy": "firebase deploy --only hosting",
    "build:deploy": "npm run build:prod && npm run deploy",
    "deploy:ci": "./node_modules/.bin/firebase deploy --token=$FIREBASE_DEPLOY_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drminnaar/react-starter.git"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.109",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.2",
    "autoprefixer": "^8.6.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "firebase-tools": "^3.19.0",
    "html-webpack-plugin": "^3.2.0",
    "json-server": "^0.14.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.5",
    "sass-loader": "^7.0.1",
    "sass-resources-loader": "^1.3.3",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.3.1",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.9.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^2.1.4",
    "webpack-dashboard": "^2.0.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "immutable": "^3.8.2",
    "lodash": "^4.17.10",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-modal": "^3.4.5",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
    "shave": "^2.1.3"
  }
}
